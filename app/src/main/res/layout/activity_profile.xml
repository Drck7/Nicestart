<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="111dp"
        android:layout_height="103dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameProfile"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="DANIEL VEGA"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/imgProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolorngiquet, porta non nam urna semper etiam id. Volutpat purnia graviderit imperdiet facilisis euismod. Vivamus maecenas facilisis bibendum urna ut justo eleifend, faucibus feugiat tempus hendrerit nostra purus a, ac inceptos mi odio nam ornare."
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/nameProfile"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>